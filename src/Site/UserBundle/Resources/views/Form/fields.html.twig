{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                {% if loop.index == 1 %}
                    {{ error.message }}!
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
{% block form_row %}
{% spaceless %}
<div class="control-group {% if form.vars.errors|length %}error{% endif %}">
	{{ form_label(form, label|default(null),{ 'label_attr': {'class': 'control-label'} }) }}
	<div class="controls">
	    {{ form_widget(form) }}
	    {% if form.vars.errors|length  %}
	        <span class="help-inline">{{ form_errors(form) }}</span>
	    {% endif %}
	</div>
</div>
{% endspaceless %}
{% endblock form_row %}